INCLUDE $TOP/test/config.htb
INCLUDE $TOP/macros/smtp.htb

CLIENT
# connect to host and port same like wellknown _REQ command
_SMTP:CONNECT $YOUR_HOST $YOUR_PORT
# sending smtp command with a single line return
_SMTP:SEND "HELO bluewin.ch"
_EXPECT . "220"
_SMTP:WAIT
# sending smtp command with multiline return
_SMTP:SEND "HELP"
_EXPECT . "220"
_EXPECT . "250"
_SMTP:WAIT
# sending smtp command with multiline return
_SMTP:SEND "HELP"
_EXPECT . "220"
_EXPECT . "250"
_SMTP:WAIT
_SMTP:SEND "QUIT"
_EXPECT . "220"
_SMTP:WAIT
END

SERVER $YOUR_PORT
_RES
__220 small stupid smtp test server
_FLUSH
_READLINE
__220 say HELO too
_FLUSH
_READLINE
__220-Help text 1
__220-Help text 2
__250-Help text 3
__220-Help text 4
__220-Help text 5
__220 Final
_FLUSH
_READLINE
__220-Help text 1
__220-Help text 2
__250-Help text 3
__220-Help text 4
__220-Help text 5
__220 Final
_FLUSH
_READLINE
__220 terminate
END

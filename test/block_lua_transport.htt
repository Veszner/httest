INCLUDE $TOP/test/config.htb

BLOCK:LUA MyLuaThing
  t = htt.get_transport()
  print()
  buf = t:read(8192)
  print("\n--------------")
  print(buf.."--------------")
  t:write("GET / HTTP/1.1\r\n");
  t:write("\r\n");
  print()
END

CLIENT
  _REQ $YOUR_HOST $YOUR_PORT
  __GET / HTTP/1.1
  __Host: httest
  __

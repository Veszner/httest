ifndef VERSION 
  VERSION=undef
endif

all:
	echo "% autogenerated" > title.tex
	echo "\\begin{titlepage}" >> title.tex
	echo "\\title{htt User's Guide \\ \small Version ${VERSION}}" >> title.tex
	echo "\\author{by Marcel Schoen, Switzerland}" >> title.tex
	echo "\\end{titlepage}" >> title.tex
	pdflatex users-guide.tex users-guide.pdf
